<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#ECE6F0"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#CAC4D0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avatarCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#EADDFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/avatarLetter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="P"
                    android:textColor="#4F378A"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarCircle"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/recipeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Header"
                    android:textColor="#1D1B20"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/recipeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Subhead"
                    android:textColor="#49454F"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E7E0EC">

            <ImageView
                android:id="@+id/recipeImageThumbnail"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#E7E0EC"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_shapes" />
        </FrameLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>